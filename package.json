{
  "name": "pxn-cb1-hid-monitor",
  "version": "1.0.0",
  "description": "TypeScript Node.js project for monitoring USB HID devices like PXN CB1 button box",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "hid",
    "usb",
    "button-box",
    "pxn-cb1",
    "typescript",
    "node"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "node-hid": "^2.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-hid": "^1.3.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
